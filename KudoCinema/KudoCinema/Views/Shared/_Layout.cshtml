<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Kudo Cinema Website</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .body-content {
            margin-top: 5%
        }
    </style>
</head>
<body>
    <div class="navbar navbar-expand-md bg-dark navbar-dark fixed-top">
        <div class="container">

            @Html.ActionLink("Kudo Cinema", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            <ul class="navbar-nav">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { area= ""}, new { @class="nav-link"})</li>
                <li class="nav-item">@Html.ActionLink("Customers", "Index", "Customer", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Movies", "Index", "Movie", new { area = "" }, new { @class = "nav-link" })</li>
            </ul>
			@Html.Partial("_LoginPartial") 
        </div>

    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Cinema</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)
</body>
</html>
